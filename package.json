{
  "name": "snapline",
  "version": "0.1.0",
  "description": "",
  "main": "src/main.ts",
  "scripts": {
    "dev": "npm run watch:tsc & npm run watch:sass & npm run watch:rollup & cd demo && npm run dev",
    "watch:tsc": "tsc -w",
    "watch:rollup": "rollup --config --watch --environment BUILD_ENV:dev",
    "watch:sass": "sass -w src/theme:demo/src/lib/theme",
    "lint": "eslint src/**/*.ts --fix",
    "build": "tsc && sass src/theme:dist/theme --no-source-map && rollup --config --environment BUILD_ENV:production && uglifyjs --compress --mangle -- dist/snapline.js > dist/snapline.min.js",
    "deploy": "tsc && sass src/theme:demo/src/lib/theme && rollup --config --environment BUILD_ENV:deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tfukaza/node-editor.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tfukaza/node-editor/issues"
  },
  "homepage": "https://github.com/tfukaza/node-editor#readme",
  "devDependencies": {
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "rollup": "^2.75.7",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "sass": "^1.53.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "uglify-js": "^3.16.0"
  }
}
