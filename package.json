{
  "name": "snapline",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/snapline.umd.js",
  "module": "./dist/snapline.mjs",
  "exports": {
    ".": {
      "import": "./dist/snapline.mjs",
      "require": "./dist/snapline.umd.js"
    }
  },
  "scripts": {
    "dev:vanilla": "FRAMEWORK=vanilla npx vite build --mode development --watch  & FRAMEWORK=vanilla npx vite serve demo/vanilla --config demo/vanilla/vite.config.mjs",
    "dev:react": "FRAMEWORK=react npx vite build --mode development --watch    & FRAMEWORK=react npx vite serve demo/react --config demo/react/vite.config.mjs",
    "dev:all": "concurrently --kill-others \"npm run dev:vanilla\" \"npm run dev:react\"",
    "test": "start-server-and-test dev:all \"localhost:3001|localhost:3002\" jest",
    "format": "prettier --write src",
    "lint": "eslint src --ext .ts",
    "build": "vite build --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tfukaza/node-editor.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tfukaza/node-editor/issues"
  },
  "homepage": "https://github.com/tfukaza/node-editor#readme",
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-puppeteer": "^10.0.1",
    "prettier": "3.3.2",
    "puppeteer": "^22.13.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.75.0",
    "serve": "^14.2.1",
    "start-server-and-test": "^2.0.4",
    "terser": "^5.31.1",
    "tslib": "^2.6.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.15.0",
    "uglify-js": "^3.17.4",
    "vite": "^5.3.2"
  },
  "dependencies": {
    "interactjs": "^1.10.27"
  }
}
